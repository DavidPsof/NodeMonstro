extends layout

block content
    h1= title
    hr
    if (username != '')
        h1 добавить документ
        form(action='/document' method='POST')
            input(type='hidden' name='author' value=user.username)
            input(type='text' placeholder='добавить' name='name')
            br
            input(type='text' placeholder='комментарий' name='comment')
            br
            input(type='submit' value='добавить')
        p #{user.username}
        form(action='/logout' method='POST')
            input(type='submit' value='выйти')
    hr
    #container.col
        if (username == '')
            a(href='/login/') Войти
            br
            a(href='/registrate/') Зарегистрироваться
        h3 Список всех документов
        ul
            each val in documents
                li
                a(href='/document/' + val.number)= val.name

